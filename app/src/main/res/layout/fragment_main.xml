<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/milky"
    tools:context=".MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <Button
            android:id="@+id/btn_intents_deep_linking"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/pink"
            android:text="@string/foreground_service"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/btn_intents_deep_linking"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <Button
            android:id="@+id/btn_foreground_service"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/pink"
            android:text="@string/foreground_service"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/btn_intents_deep_linking"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btn_broadcast_receiver"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/pink"
            android:text="@string/foreground_service"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_foreground_service" />

        <Button
            android:id="@+id/btn_content_provider"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/pink"
            android:text="@string/foreground_service"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_broadcast_receiver" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
